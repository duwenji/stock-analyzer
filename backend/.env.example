DB_NAME=stock_analyzer
DB_USER=stock_user
DB_PASSWORD=strong_password

AGENT_TYPE=direct
MAX_WORKERS=2
REQUEST_INTERVAL=0.5      # リクエスト間隔(秒)
MAX_RETRIES=3             # 最大リトライ回数

DEEPSEEK_API_KEY=your_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-reasoner

# Moving average settings for chart
SHORT_MA_WINDOW=12        # 短期移動平均期間(日)
LONG_MA_WINDOW=26         # 長期移動平均期間(日)

# ゴールデンクロス/デッドクロス計算用
GOLDEN_DEAD_SHORT_WINDOW=12   # より短期の移動平均
GOLDEN_DEAD_LONG_WINDOW=26    # 中期移動平均

# RSI計算用
RSI_WINDOW=9                 # より敏感なRSI

# MACD計算用
MACD_FAST=12                   # 超短期EMA
MACD_SLOW=26                  # 短期EMA
MACD_SIGNAL=9                 # シグナル感度向上

