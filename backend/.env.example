# Database configuration
DB_NAME=stock_analyzer
DB_USER=stock_user
DB_PASSWORD=strong_password

# AI Agent configuration
AGENT_TYPE=mcpagent
MAX_WORKERS=2
REQUEST_INTERVAL=0.5      # リクエスト間隔(秒)
MAX_RETRIES=3             # 最大リトライ回数

# API Keys (実際の値を設定してください)
DEEPSEEK_API_KEY=your_api_key_here

# Moving average settings for chart
SHORT_MA_WINDOW=25        # 短期移動平均期間(日)
LONG_MA_WINDOW=75         # 長期移動平均期間(日)

# ゴールデンクロス/デッドクロス計算用
GOLDEN_DEAD_SHORT_WINDOW=25  # 短期移動平均期間(日)
GOLDEN_DEAD_LONG_WINDOW=75   # 長期移動平均期間(日)

# RSI計算用
RSI_WINDOW=14                 # RSI計算期間(日)

# MACD計算用
MACD_FAST=12                  # MACD短期EMA期間
MACD_SLOW=26                  # MACD長期EMA期間
MACD_SIGNAL=9                 # MACDシグナル期間


#短期相場分析用の設定
# - 移動平均線：
#   - 短期移動平均期間(日)：　10日（SHORT_MA_WINDOW=10）
#   - 長期移動平均期間(日)：  30日（LONG_MA_WINDOW=30）
# - ゴールデンクロス/デッドクロス：
#   - 短期移動平均: 10日 (GOLDEN_DEAD_SHORT_WINDOW=10)
#   - 長期移動平均: 30日 (GOLDEN_DEAD_LONG_WINDOW=30)
# - RSI計算期間: 10日 (RSI_WINDOW=10)
# - MACD設定：
#   - 短期EMA: 5日 (MACD_FAST=5)
#   - 長期EMA: 15日 (MACD_SLOW=15)
#   - シグナル線: 5日 (MACD_SIGNAL=5)


# 注意: このファイルをコピーして.envファイルを作成し、
# 実際の値を設定してください。.envファイルは.gitignoreに含まれています。
